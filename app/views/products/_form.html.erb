<%= form_with(model: [@category, product], data: { remote: true }) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group d-flex">
    <%= form.text_field :name, class:"form-control w-25", placeholder:"Enter product name" %>
  </div>

  <div class="field form-group d-flex">
    <%= form.text_area :description, class:"form-control w-25", placeholder:"Enter Description" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
